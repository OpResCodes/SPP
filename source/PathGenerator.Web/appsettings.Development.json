{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "File": {
      "Path": "app.log",
      "Append": "True",
      "MinLevel": "Debug", // min level for the file logger
      "FileSizeLimitBytes": 5243000, // (5mb) use to activate rolling file behaviour
      "MaxRollingFiles": 10 // use to specify max number of log files
    }
  }
}
